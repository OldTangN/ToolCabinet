<UserControl x:Class="ToolMgt.UI.Controls.ToolInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolMgt.UI.Controls"
             mc:Ignorable="d" Background="White" Height="60" Width="60"
             d:DesignHeight="60" d:DesignWidth="60" FontSize="16">
    <Border BorderBrush="LightBlue" BorderThickness="2">
        <Grid MouseDown="Grid_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Name="tb1" Grid.Row="0" Text="工位1" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Name="tb2" Grid.Row="1" Text="空闲" HorizontalAlignment="Center"></TextBlock>
        </Grid>
    </Border>
</UserControl>
