<UserControl x:Class="ToolMgt.UI.Controls.ToolInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolMgt.UI.Controls"
             mc:Ignorable="d" Background="White" MinWidth="60" MinHeight="60"
             d:DesignHeight="60" d:DesignWidth="60" FontSize="16" Cursor="Hand">   
    <Border Name="border" BorderBrush="LightBlue" BorderThickness="2">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Value="False" Property="IsEnabled">
                        <Setter Property="Background" Value="Red"></Setter>
                    </Trigger>
                    <Trigger Value="True" Property="IsEnabled">
                        <Setter Property="Background" Value="LightGreen"></Setter>
                    </Trigger>
                    <!--<Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightYellow"></Setter>
                        </Trigger>-->
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid MouseDown="Grid_MouseDown" Background="Transparent">            
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Name="tb1" Grid.Row="0" Text="工位01" HorizontalAlignment="Center" VerticalAlignment="Center">
            </TextBlock>
            <TextBlock Name="tb2" Grid.Row="1" Text="空闲" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        </Grid>
    </Border>
</UserControl>
