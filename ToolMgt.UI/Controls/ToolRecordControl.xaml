                    </StackPanel>
                </StackPanel>-->
            </Grid>
        </Border>
        <local:BusyIndicator x:Name="busyCtl" Grid.Row="1" Grid.Column="1"></local:BusyIndicator>
    </Grid>
</UserControl>
