        <local:ToolInfo x:Name="tool_14" Margin="10" Text1="工位14：" Grid.Row="6" Grid.Column="1" Text2="{Binding Path=Tools[13].Text2}" Text3="{Binding Path=Tools[13].Text3}" Selected="{Binding Tools[13].IsSelected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Tools[13].CanSelected}"></local:ToolInfo>
        <local:ToolInfo x:Name="tool_15" Margin="10" Text1="工位15：" Grid.Row="7" Grid.Column="1" Text2="{Binding Path=Tools[14].Text2}" Text3="{Binding Path=Tools[14].Text3}" Selected="{Binding Tools[14].IsSelected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Tools[14].CanSelected}"></local:ToolInfo>
        <local:ToolInfo x:Name="tool_16" Margin="10" Text1="工位16：" Grid.Row="8" Grid.Column="1" Text2="{Binding Path=Tools[15].Text2}" Text3="{Binding Path=Tools[15].Text3}" Selected="{Binding Tools[15].IsSelected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Tools[15].CanSelected}"></local:ToolInfo>
    </Grid>
</UserControl>
